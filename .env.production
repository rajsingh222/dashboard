# Server Configuration
NODE_ENV=production
PORT=5000

# MongoDB Configuration - CHANGE THIS
MONGODB_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/dashboard_sppl?retryWrites=true&w=majority

# JWT Configuration - CHANGE THESE SECRETS!
JWT_SECRET=CHANGE_TO_STRONG_RANDOM_STRING_MIN_32_CHARS
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=CHANGE_TO_ANOTHER_STRONG_RANDOM_STRING_MIN_32_CHARS
JWT_REFRESH_EXPIRE=30d

# CORS Configuration - CHANGE TO YOUR DOMAIN
FRONTEND_URL=https://yourdomain.com
ADMIN_FRONTEND_URL=https://yourdomain.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Admin Default Credentials - CHANGE AFTER FIRST LOGIN!
ADMIN_EMAIL=admin@spplindia.org
ADMIN_PASSWORD=ChangeThisPassword123!
ADMIN_NAME=SPPL Admin
ADMIN_USERNAME=admin
